<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ece420.lab3.MainActivity">


    <LinearLayout
        android:id="@+id/firstLayer"
        android:layout_above="@id/secondLayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="0dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ask_input"
            android:textColor="#000000" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/secondLayer"
        android:layout_above="@id/thirdLayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="0dp"
        android:layout_centerHorizontal="true"
        >
        <Spinner
            android:id="@+id/spin"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:entries="@array/NumberofInstruments"
            android:textSize="36dp"
            tools:layout_editor_absoluteX="154dp"
            tools:layout_editor_absoluteY="154dp"></Spinner>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/thirdLayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="0dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        >
        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Start"
            android:visibility="gone"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="End"
            android:visibility="gone"/>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/forthLayer"
        android:layout_below="@id/thirdLayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="50dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="@string/prediction"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/fifLayer"
        android:layout_below="@id/forthLayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        >

        <TextView
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:id="@+id/instrument_1"
            android:textColor="#000000"/>


        <TextView
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:id="@+id/instrument_2"
            android:textColor="#000000"/>


        <TextView
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:id="@+id/instrument_3"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:id="@+id/instrument_4"
            android:textColor="#000000"/>


        <TextView
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:id="@+id/instrument_5"
            android:textColor="#000000"/>


        <TextView
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:id="@+id/instrument_6"
            android:textColor="#000000"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/sixLayer"
        android:layout_below="@id/fifLayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        >


        <TextView
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:id="@+id/conf_1"
            android:textColor="#000000"/>


        <TextView
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:id="@+id/conf_2"
            android:textColor="#000000"/>


        <TextView
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:id="@+id/conf_3"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:id="@+id/conf_4"
            android:textColor="#000000"/>


        <TextView
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:id="@+id/conf_5"
            android:textColor="#000000"/>


        <TextView
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:id="@+id/conf_6"
            android:textColor="#000000"/>



    </LinearLayout>





</RelativeLayout>

